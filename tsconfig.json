{
  "include": [
    "NetscriptDefinitions.d.ts",
    "global.d.ts",
    "src/**/*",
    "tests/**/*",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": ".",
    "types": ["jest", "node", "react"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "/src/*": ["src/*"],
      "@ns": [
        "./NetscriptDefinitions.d.ts"
      ]
    }
  }
}
